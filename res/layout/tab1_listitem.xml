<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab1ListItemLayout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp" >

        <View
            android:id="@+id/tab1ListAlarmBar"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/AppBaselight"
            android:visibility="gone" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/tab1ListCheckBoxLayout"
        android:layout_width="40dp"
        android:layout_height="55dp"
        android:visibility="gone" >

        <CheckBox
            android:id="@+id/tab1ListCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="55dp"
        android:layout_height="55dp" >

        <View
            android:id="@+id/tab1ListImageOuter"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerInParent="true"
            android:background="@color/AppBaselight" />

        <ImageView
            android:id="@+id/tab1ListImage"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tab1ListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/tab1DeleteButton"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="#e77252"
            android:text="삭제"
            android:textColor="#FFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>